{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install venv",
      "type": "shell",
      "command": "python3 -m venv .venv && .venv/bin/pip install -r requirements.txt",
      "problemMatcher": []
    },
    {
      "label": "Clean venv",
      "type": "shell",
      "command": "rm -rf ${workspaceFolder}/.venv",
      "problemMatcher": []
    },
    {
      "label": "Run test",
      "type": "shell",
      "command": ".venv/bin/python -m pytest tests/ -v",
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}