{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install venv",
      "type": "shell",
      "command": "python3 -m venv .venv && .venv/bin/pip install -r requirements.txt",
      "problemMatcher": []
    },
    {
      "label": "Clean venv",
      "type": "shell",
      "command": "rm -rf ${}/.venv",
      "problemMatcher": []
    },
    {
      "label": "Run main",
      "type": "shell",
      "command": ".venv/bin/python main.py",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run test",
      "type": "shell",
      "command": ".venv/bin/python -m pytest",
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}