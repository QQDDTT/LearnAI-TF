{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install venv",
      "type": "shell",
      "command": "python3 -m venv .venv && .venv/bin/pip install -r requirements.txt",
      "problemMatcher": []
    },
    {
      "label": "Clean venv",
      "type": "shell",
      "command": "rm -rf ${workspaceFolder}/.venv",
      "problemMatcher": []
    },
    {
      "label": "Run Test Modules",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/python",
      "args": [
        "test/test_modules.py",
        "--config",
        "config_test.yaml"
      ],
      "options": {
        "env": {
          "PYTHONPATH": "${workspaceFolder}",
          "LOG_HOME": "/home/nick/logs"
        }
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": true
      },
      "problemMatcher": []
    }
  ]
}
